                                <li><a href="{{ path('show_service_category') }}">
                                        دسته خدمات
                                    </a></li>


                            </ul>
                        </li>
 <li>
                            <a href="{{ path('show_services') }}">
                               گزارش خدمات
                            </a>

                        </li>
                        <li>
                            <a href="{{ path('fos_user_security_logout') }}">
                                {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
                            </a>

                        </li>

                    {% else %}
                        <li>
                            <a href="{{ path('fos_user_security_login') }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a></li>
                        <li>  <a href="{{ path('fos_user_registration_register') }}">{{ 'layout.register'|trans({}, 'FOSUserBundle') }}</a>
                        </li>
                    {% endif %}


                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>
    <div class="container">

        <div class="page-header">
            <hr style="height:5px; visibility:hidden;" />
            <h2></h2>

        </div>
    </div>
    <div class="container">

        <div class="row">
            <div class="col-lg-12">
                {% block content %}

                {% endblock %}

            </div>
        </div>
    </div>
    <div class="container text-center">



        <!-- Footer -->
        <footer>
            <div class="row">
                <div class="col-lg-12">
                    <p>Copyright &copy;  2017</p>
