                        <li> <a href="{{ path('fos_user_profile_show') }}">  {{app.user.email}} </a></li>
                        {% else %}
                        <li><a href="#"> مهمان </a></li>
                        {% endif %}


                    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
